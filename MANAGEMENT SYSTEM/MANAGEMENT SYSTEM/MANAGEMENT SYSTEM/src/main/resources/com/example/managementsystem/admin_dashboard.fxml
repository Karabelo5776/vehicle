<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="918.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managementsystem.AdminDashboardController">


    <Pane layoutX="0" layoutY="0" prefHeight="60" prefWidth="918.0" style="-fx-background-color: #2c3e50;">
        <Label layoutX="15" layoutY="15" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Admin Dashboard" />
        <Label fx:id="welcomeLabel" layoutX="220" layoutY="22" style="-fx-text-fill: white; -fx-font-size: 16;" />
        <Button layoutX="700" layoutY="15" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
    </Pane>


    <Pane layoutX="0" layoutY="60" prefHeight="540" prefWidth="200" style="-fx-background-color: #34495e;">
        <Button layoutX="10" layoutY="20" onAction="#showDashboard" prefWidth="180" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Dashboard" />
        <Button layoutX="10" layoutY="70" onAction="#showVehicleManagement" prefWidth="180" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Vehicles" />
        <Button layoutX="10" layoutY="120" onAction="#showCustomerManagement" prefWidth="180" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Customers" />
        <Button layoutX="10" layoutY="170" onAction="#showUserManagement" prefWidth="180" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Users" />
        <Button layoutX="10" layoutY="220" onAction="#showReports" prefWidth="180" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Reports" />
    </Pane>


    <AnchorPane fx:id="contentPane" layoutX="200" layoutY="60" prefHeight="540" prefWidth="600">

        <Text layoutX="100" layoutY="100" style="-fx-font-size: 28; -fx-fill: #2c3e50;" text="Welcome to Admin Dashboard" />
    </AnchorPane>


</AnchorPane>
